extends ../index

block main
    .container.main
        form.sign(method="post")
            .form-group
                input.form-control(type="text", name="name", placeholder="username")
            .form-group
                input.form-control(type="password", name="password", placeholder="password")
            .form-group
                input.form-control(type="password", name="password_repeat", placeholder="input password again")
            .form-group
                input.form-control(type="email", name="email", placeholder="email")
            .form-group.txt-right
                button.btn(type="submit") 注册
